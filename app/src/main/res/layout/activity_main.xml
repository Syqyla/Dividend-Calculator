<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cottage_cream"
    android:padding="10dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="@color/sage_green"
        android:title="@string/dividend_calculator_app"
        android:titleTextColor="@color/ivory_white"
        android:elevation="4dp"
        android:gravity="center"/>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/soft_beige"
            android:elevation="4dp"
            android:outlineProvider="bounds">

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dividend_calculator_app"
                android:textColor="@color/text_dark"
                android:textSize="32sp"
                android:textStyle="bold"
                android:paddingBottom="4dp"
                android:shadowColor="@color/accent_brown"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <!-- Decorative line -->
            <View
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="@color/terracotta"
                android:layout_marginBottom="12dp"
                android:alpha="0.6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Insert all the details below"
                android:textColor="@color/terracotta"
                android:textSize="16sp"
                android:textStyle="italic"
                android:paddingBottom="20dp"/>

            <!-- Input fields -->
            <EditText
                android:id="@+id/edtInvested"
                android:layout_width="320dp"
                android:layout_height="65dp"
                android:layout_marginBottom="18dp"
                android:backgroundTint="@color/sage_green"
                android:hint="Investment Amount (RM)"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="16sp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="3dp"
                android:scrollbars="none"/>

            <EditText
                android:id="@+id/edtRate"
                android:layout_width="320dp"
                android:layout_height="65dp"
                android:layout_marginBottom="18dp"
                android:backgroundTint="@color/sage_green"
                android:hint="Annual Dividend Rate (%)"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="16sp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="3dp"
                android:scrollbars="none"/>

            <EditText
                android:id="@+id/edtMonths"
                android:layout_width="320dp"
                android:layout_height="65dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/sage_green"
                android:hint="Months Invested (1-12)"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_dark"
                android:textSize="16sp"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:elevation="3dp"
                android:scrollbars="none"/>

            <!-- Calculate Button -->
            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="220dp"
                android:layout_height="75dp"
                android:layout_marginBottom="30dp"
                android:text="Calculate"
                android:textColor="@color/ivory_white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="8dp"
                android:padding="12dp"
                android:clipToOutline="true"
                android:backgroundTint="@color/terracotta"/>

            <!-- Result -->
            <TextView
                android:id="@+id/txtResult"
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:background="@color/cottage_cream"
                android:gravity="center"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:padding="16dp"
                android:clipToOutline="true"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>